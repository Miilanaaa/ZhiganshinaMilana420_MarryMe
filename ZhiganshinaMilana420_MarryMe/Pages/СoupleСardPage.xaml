<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.СoupleСardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="СoupleСardPage">
    <Grid Background="#EEEFEA">
        <TextBlock Text="Карточка пары"
                   FontWeight="Bold"
                   Foreground="#909478"
                   FontSize="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="55 30 0 0"/>
        <TextBlock Text="Жених"
                   FontSize="25"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Margin="55 100 0 0"/>
        <TextBlock Text="Невеста"
                   FontSize="25"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Margin="55 255 0 0"/>
        <TextBlock x:Name="NameGroomTb"
                   Foreground="Black"
                   Width="300"
                   Height="100"
                   FontSize="20"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="50 140 0 0"/>
        <TextBlock x:Name="NameBrideTb"
                   Foreground="Black"
                   Width="300"
                   FontSize="20"
                   Height="100"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="50 290 0 0"/>
        <ListView x:Name="FavoritClientLv"
                  Width="780"
                  Height="650"
                  d:ItemsSource="{d:SampleData ItemCount=12}"
                  Margin="100 50 0 0"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  BorderThickness="5"
                  BorderBrush="LightGray">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="№" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Number}" 
                                   HorizontalAlignment="Center"
                                   Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Категория" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Название" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Дата брони" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Padding="5"
                                            Content="Выбрать"
                                            Click="SelectCategory_Click"
                                            Tag="{Binding Number}"
                                            Margin="0,0,5,0"/>
                                    <Button Padding="5"
                                            Content="Отменить"
                                            Click="CancelSelection_Click"
                                            Tag="{Binding Number}"
                                            Visibility="{Binding CancelButtonVisibility}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ExitBt"
                FontSize="20"
                Width="150"
                Height="45"
                Content="Назад"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20" Click="ExitBt_Click"/>
        <Button x:Name="GenerateContractBt"
                FontSize="20"
                Width="200"
                Height="45"
                Content="Создать договор"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 30 30"
                Click="GenerateContractBt_Click"/>
        <Button x:Name="SeatingNavigateBt"
                FontSize="20"
                Width="200"
                Height="45"
                Content="Рассадка"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 30 100" 
                Click="SeatingNavigateBt_Click"/>
    </Grid>
</Page>
