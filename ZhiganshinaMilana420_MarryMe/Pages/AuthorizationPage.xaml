<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="820" d:DesignWidth="1570"
      Title="AuthorizationPage">
    <Page.Resources>
        <DropShadowEffect x:Key="TextShadow" 
                     BlurRadius="8" 
                     ShadowDepth="2" 
                     Color="#40000000" 
                     Direction="270" 
                     Opacity="0.6"/>

        <DropShadowEffect x:Key="InputFieldShadow" 
                     BlurRadius="12" 
                     ShadowDepth="3" 
                     Color="#40000000" 
                     Direction="270" 
                     Opacity="0.4"/>

        <DropShadowEffect x:Key="ButtonShadow" 
                     BlurRadius="15" 
                     ShadowDepth="4" 
                     Color="#60000000" 
                     Direction="270" 
                     Opacity="0.7"/>

        <DropShadowEffect x:Key="ErrorTextShadow" 
                     BlurRadius="5" 
                     ShadowDepth="1" 
                     Color="#80B00000" 
                     Direction="270" 
                     Opacity="0.8"/>
    </Page.Resources>
        <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/natural.png" 
                        Stretch="UniformToFill"/>
        </Grid.Background>
        <Border x:Name="MainBorder" 
                Width="500"
                Height="500"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Padding="30"
                CornerRadius="20">
            <Border.Background>
                <SolidColorBrush Color="#909478" Opacity="0.85"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#909478" Opacity="0.5"/>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                  ShadowDepth="0"
                  Direction="0"
                  Color="#CC9B5757"  
                  Opacity="0.3"
                  RenderingBias="Quality"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="С возвращением!"
                          Grid.Row="0"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Foreground="#F0EFEB"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="0,0,0,20"
                          FontFamily="Playfair Display"
                          Effect="{StaticResource TextShadow}"/>

                <TextBlock Text="Мы так рады вас видеть снова!"
                          Grid.Row="1"
                          FontSize="20"
                          FontWeight="Medium"
                          Foreground="#F0EFEB"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"
                          FontFamily="Playfair Display"
                          Effect="{StaticResource TextShadow}"/>

                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Логин *" 
                             Foreground="#F0EFEB"
                             Margin="5,0,0,0"
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             FontSize="16"
                             Effect="{StaticResource TextShadow}"/>
                    <TextBox x:Name="LoginTbx"
                             Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                             Foreground="#333333"
                             Background="#F0EFEB"
                            BorderBrush="#E4C8BF"
                            FontSize="16"
                            Height="35"
                            Margin="5,5,0,0"
                            Effect="{StaticResource InputFieldShadow}"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,0,0,25">
                    <TextBlock Text="Пароль *" 
                               Foreground="#F0EFEB"
                               Margin="5,0"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               FontSize="16"
                               Effect="{StaticResource TextShadow}"/>
                    <PasswordBox x:Name="PasswordPbx" 
                                 Style="{StaticResource MaterialDesignFilledPasswordBox}"
                                 Background="#F0EFEB"
                                 BorderBrush="#E4C8BF"
                                 Foreground="#333333"
                                 Height="40"
                                 Margin="5,5,0,0"
                                 Effect="{StaticResource InputFieldShadow}"/>
                </StackPanel>

                <!-- Кнопка входа -->
                <Button x:Name="LoginBtn"
                        Grid.Row="4"
                        Content="Войти"
                        Style="{StaticResource AnimatedRoundedButton}"
                        Background="#EDB69E"
                        FontSize="18"
                        Height="50"
                        Margin="0,0,0,25"
                        Effect="{StaticResource ButtonShadow}"
                        Click="LoginBtn_Click"/>

                <TextBlock x:Name="txtError" 
                           Foreground="#B00000" 
                           Grid.Row="5"
                           FontSize="18"
                           Height="50"
                           Width="auto"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</Page>
