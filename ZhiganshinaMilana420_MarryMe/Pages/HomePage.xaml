<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages" 
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="HomePage">
    
    <Grid Background="#EEEFEA">
        <Button Name="AddClientBtt"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="20"
                Width="300"
                Height="40"
                Content="Зарегистрировать клиента"
                FontSize="20"
                Click="AddClientBtt_Click"/>
        <!--<Button Name="EditUserBtt"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0 20 100 0"
                Width="57"
                Height="57"
                Content="⚙️"
                FontSize="20"
                Click="EditUserBtt_Click"/>-->
        <TextBox x:Name="SearchTb"
                 Width="200"
                 Height="40"
                 FontSize="15"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="20 90 0 0"
                 TextChanged="SearchTb_TextChanged"/>
        <ComboBox x:Name="FilterCb"
                  DisplayMemberPath="Name"
                  FontSize="15"
                  ItemsSource="{Binding statuses}"
                  Width="220"
                  Height="40"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="230 90 0 0"
                  SelectionChanged="FilterCbClik">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="HorizontalContentAlignment" 
                            Value="Center"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>
        <ListView x:Name="CoupleLV"
                  Loaded="CoupleLV_Loaded"
                  d:ItemsSource="{d:SampleData ItemCount=1}"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Bottom"
                  Margin="0 0 0 50"
                  Width="650"
                  Height="550" 
                  SelectionChanged="CoupleLV_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1" 
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border Width="600"
                                Height="150"
                                Background="#909478"
                                CornerRadius="15">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical"
                                                    Width="430">
                                            <TextBlock Text="{Binding WeddingStatus.Name}"
                                                       FontSize="18"
                                                       Foreground="White"
                                                       Margin="10 10 0 0"/>
                                            <TextBlock Text="{Binding WeddingDate,  StringFormat='{}{0:dd.MM.yyyy}'}"
                                                       FontSize="18"
                                                       Foreground="White"
                                                       Margin="10 0 0 0"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Margin="10 10 0 0"
                                                        HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Gromm.Surname}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Gromm.Name}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           Margin="5 0 0 0"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Gromm.Patronymic}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           Margin="5 0 0 0"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Margin="10 0 0 0"
                                                        HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Bride.Surname}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Bride.Name}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           Margin="5 0 0 0"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Bride.Patronymic}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           Margin="5 0 0 0"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical"
                                                    Width="150"
                                                    Margin="10">
                                            <Button x:Name="OpenContractBtt"
                                                    Content="Договор" 
                                                    Width="120"
                                                    Tag="{Binding}"
                                                    Height="30"
                                                    FontSize="13"
                                                    Foreground="White"
                                                    Click="OpenContract_Click" Cursor=""/>
                                            <Button Content="Материалы" 
                                                    Width="120"
                                                    Height="30"
                                                    FontSize="13"
                                                    Foreground="White"
                                                    Margin="10"
                                                    Click="MaterialsButton_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </StackPanel>
                                   
                                </StackPanel>
                               
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <DatePicker x:Name="DateTaskDp"
                    Width="200"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 90 320 0"
                    FontSize="20"
                    SelectedDateChanged="DateTaskDp_SelectedDateChanged"/>
        <Button x:Name="AddTaskUsersBt"
                Width="200"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 90 100 0"
                Content="Добавить задачу"
                FontSize="15" 
                Click="AddTaskUsersBt_Click"/>
        <ListView x:Name="TaskUserLV"
                  d:ItemsSource="{d:SampleData ItemCount=1}"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  Margin="0 0 40 50"
                  AlternationCount="10000"
                  Width="700"
                  Height="550" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  SelectionChanged="TaskUserLV_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border Width="670"
                                Height="Auto" 
                                MinHeight="60"
                                BorderBrush="#E4C8BF"
                                BorderThickness="5"
                                CornerRadius="20">
                            <StackPanel Orientation="Horizontal"
                                        Width="660"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Top">
                                    <Ellipse Height="40" 
                                             Width="40"
                                             Margin="20">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AdminPhoto}"
                                                        Stretch="UniformToFill" 
                                                        AlignmentX="Center" 
                                                        AlignmentY="Center"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Center"
                                                Width="100">
                                        <TextBlock Text="{Binding AdminLastName}"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding AdminFirstName}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}"
                                           FontSize="17"
                                           Width="350"
                                           Height="Auto"
                                           VerticalAlignment="Top"
                                           Margin="5 22 0 10"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Vertical"
                                            Margin="10 0 0 0">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding Done, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                                  VerticalAlignment="Center"
                                                  Margin="0 5 0 0"
                                                  Style="{StaticResource MaterialDesignActionToggleButton}"
                                                  Checked="TaskUserChb_CheckedChanged"
                                                  Unchecked="TaskUserChb_CheckedChanged"
                                                  IsEnabled="{Binding IsTaskActive}"/>
                                        <Button Name="DelareBt"
                                                Content="🗑"
                                                HorizontalAlignment="Left"
                                                FontSize="15"
                                                Width="51"
                                                Height="31"
                                                Margin="10 5 0 0"
                                                Click="DelateBt_Click" 
                                                Cursor="Hand"
                                                IsEnabled="{Binding IsTaskActive}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="DateTaskUserTb"
                                               Margin="0 10 0 0"
                                               Width="100"
                                               HorizontalAlignment="Center"
                                               Text="{Binding DateEnd, StringFormat='{}{0:dd.MM.yyyy}'}"
                                               Height="Auto" 
                                               FontSize="15"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
