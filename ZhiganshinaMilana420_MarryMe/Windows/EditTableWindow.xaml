<Window x:Class="ZhiganshinaMilana420_MarryMe.Windows.EditTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Windows"
        mc:Ignorable="d"
        Title="EditTableWindow" Height="450" Width="800">
    <Grid Margin="10">

        <TextBlock Text="Название:"/>
        <TextBox x:Name="NameTextBox" Width="300" Height="20"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="70 0 0 0"/>

        <TextBlock Text="Ширина:" Margin="0,30,0,0"/>
        <TextBox x:Name="WidthTextBox" Width="300" Height="20"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="70 30 0 0" />

        <TextBlock Text="Высота:" Margin="0,60,0,0"/>
        <TextBox x:Name="HeightTextBox" Width="300" Height="20"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="70 60 0 0"/>

        <TextBlock Text="Количество мест:"  Margin="0,90,0,0"/>
        <TextBox x:Name="SeatsTextBox" Width="300" Height="20"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="100 90 0 0"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Сохранить" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
