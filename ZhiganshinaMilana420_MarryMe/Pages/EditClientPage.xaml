<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.EditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="EditClientPage">
    <Grid Background="#EEEFEA">
        <Border Width="620"
                Height="450"
                BorderBrush="#909478"
                BorderThickness="5"
                CornerRadius="20"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="50 30 0 0"/>
        <Border Width="620"
                Height="450"
                BorderBrush="#909478"
                BorderThickness="5"
                CornerRadius="20"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0 30 100 0"/>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="1440"
                    Height="590">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal"
                            Width="720"
                            Margin="0 0 0 0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Жених"
                                   FontSize="25"
                                   Margin="100 50 0 0"
                                   FontWeight="Bold"
                                   Foreground="#909478"/>
                        <TextBlock Text="Фамилия"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="100 40 0 0"/>
                        <TextBox x:Name="SurnameGroomTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="100 0 0 0"/>
                        <TextBlock Text="Имя"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="100 5 0 0"/>
                        <TextBox x:Name="NameGroomTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="100 0 0 0"/>
                        <TextBlock Text="Отчество"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="100 5 0 0"/>
                        <TextBox x:Name="PatronymicGroomTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="100 0 0 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                Margin="10 0 0 0">
                        <TextBlock Text="Номер телефона"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0 123 0 0"/>
                        <TextBox x:Name="NumberTelGroomTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"/>
                        <TextBlock Text="Email"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0 5 0 0"/>
                        <TextBox x:Name="EmailGroomTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"/>
                        <TextBlock Text="Паспорт"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0 5 0 0"/>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 4 0 0">
                            <TextBox x:Name="PassportNumberGroomTb"
                                     Width="100"
                                     Height="35"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"/>
                            <TextBox x:Name="PassportSeriesGroomTb"
                                     Width="150"
                                     Height="35"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Margin="5 0 0 0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Выдан"
                               FontSize="20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="100 30 0 0"/>
                    <TextBox x:Name="PassportAddressGroomTb"
                             Width="440"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="5 25 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Адрес"
                               FontSize="20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="100 30 0 0"/>
                    <TextBox x:Name="AddresssGroomTb"
                             Width="440"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="10 25 0 0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Width="720">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Невеста"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Foreground="#909478"
                                   Margin="20 50 0 0"/>
                        <TextBlock Text="Фамилия"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="20 40 0 0"/>
                        <TextBox x:Name="SurnameBrideTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="20 0 0 0"/>
                        <TextBlock Text="Имя"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="20 5 0 0"/>
                        <TextBox x:Name="NameBrideTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="20 0 0 0"/>
                        <TextBlock Text="Отчество"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="20 5 0 0"/>
                        <TextBox x:Name="PatronymicBrideTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="20 0 0 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                Margin="10 0 0 0">
                        <TextBlock Text="Номер телефона"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0 123 0 0"/>
                        <TextBox x:Name="NumberTelBrideTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"/>
                        <TextBlock Text="Email"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0 5 0 0"/>
                        <TextBox x:Name="EmailBrideTb"
                                 Width="250"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"/>
                        <TextBlock Text="Паспорт"
                                   FontSize="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="0 5 0 0"/>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 4 0 0">
                            <TextBox x:Name="PassportNumberBrideTb"
                                     Width="100"
                                     Height="35"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"/>
                            <TextBox x:Name="PassportSeriesBrideTb"
                                     Width="150"
                                     Height="35"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Margin="5 0 0 0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Выдан"
                               FontSize="20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="20 30 0 0"/>
                    <TextBox x:Name="PassportAddressBrideTb"
                             Width="440"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="5 25 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Адрес"
                               FontSize="20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="20 30 0 0"/>
                    <TextBox x:Name="AddresssBrideTb"
                             Width="440"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="10 25 0 0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Border HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="55 0 0 50"
                Width="615"
                Height="200"
                BorderBrush="#909478"
                BorderThickness="5"
                CornerRadius="20"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="55 0 0 50"
                    Width="615"
                    Height="200">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Дата свадьбы"
                           FontSize="20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="50 15 0 0"/>
                <DatePicker x:Name="DateDp"
                            Margin="50 10 0 0"
                            Width="250"
                            Height="35"/>
                <TextBlock Text="Бюджет свадьбы"
                           FontSize="20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="50 10 0 0"/>
                <TextBox x:Name="WeddingBudgetTb"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="50 10 0 0"
                         Width="250"
                         Height="35"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Количество гостей"
                           FontSize="20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="35 15 0 0"/>
                <TextBox x:Name="CountGuestsTb"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="35 10 0 0"
                         Width="170"
                         Height="35"/>
            </StackPanel>
        </StackPanel>
        <Button x:Name="ExitBtt"
                Width="200"
                Height="40"
                Content="Отмена"
                FontSize="20"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0 0 310 50" 
                Click="ExitBtt_Click"/>
        <Button x:Name="SaveBtt"
                Width="200"
                Height="40"
                Content="Сохранить"
                FontSize="20"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0 0 100 50" 
                Click="SaveBtt_Click"/>
    </Grid>
</Page>
