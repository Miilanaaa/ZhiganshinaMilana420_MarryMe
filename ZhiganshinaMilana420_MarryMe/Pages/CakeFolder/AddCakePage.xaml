<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.CakeFolder.AddCakePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages.CakeFolder"
      mc:Ignorable="d" 
      d:DesignHeight="815" d:DesignWidth="1570"
      Title="AddCakePage">

    <Grid Background="#EEEFEA">
        <StackPanel Orientation="Vertical"
                    Width="530"
                    Height="600"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="50 40 0 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Название"
                           FontSize="25"/>
                <TextBox x:Name="NameTb"
                         FontSize="30"
                         Width="400"
                         Margin="10 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 20 0 0">
                <TextBlock Text="Цена"
                           FontSize="25"/>
                <TextBox x:Name="PriceTb"
                         FontSize="30"
                         Width="400"
                         Margin="10 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Фото"
                               FontSize="40"
                               Width="100"
                               Margin="10"/>

                    <Button x:Name="changeBtn"
                            Content="добавить"
                            FontSize="25"
                            Height="40"
                            Width="130" 
                            Click="changeBtn_Click"/>
                </StackPanel>

                <Image x:Name="TestImg"
                   Width="300" 
                   Height="300"
                   Margin="20 30 0 0"/>
            </StackPanel>
        </StackPanel>
        <Button x:Name="ExitBt"
                FontSize="25"
                Width="200"
                Height="50"
                Content="Отмена"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20" 
                Click="ExitBt_Click"/>
        <Button x:Name="EditBt"
                FontSize="25"
                Width="300"
                Height="50"
                Content="Добавить"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 20 250 0"
                Click="AddBt_Click"/>
    </Grid>
</Page>
