<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.HostFolder.AddHostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages.HostFolder"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="AddHostPage">
    <Grid Background="#EEEFEA">
        <Border Width="570"
                BorderBrush="#909478"
                BorderThickness="5"
                CornerRadius="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="625"
                Margin="30 30 0 0"/>
        <StackPanel Orientation="Vertical"
                    Margin="60 50 0 0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фамилия"
                           FontSize="25"/>
                <TextBox x:Name="SurnameTb"
                         FontSize="20"
                         Width="240"
                         Margin="15 0 0 0"
                         TextChanged="SurnameTb_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <TextBlock Text="Имя"
                           FontSize="25"/>
                <TextBox x:Name="NameTb"
                         FontSize="20"
                         Width="240"
                         Margin="15 0 0 0"
                         TextChanged="NameTb_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <TextBlock Text="Отчество"
                           FontSize="25"/>
                <TextBox x:Name="PatronymicTb"
                         FontSize="20"
                         Width="240"
                         Margin="15 0 0 0"
                         TextChanged="PatronymicTb_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 15 0 0">
                <TextBlock Text="Цена ведущего"
                           FontSize="25"/>
                <TextBox x:Name="PriceTb"
                         FontSize="20"
                         TextChanged="PriceTb_TextChanged"
                         Width="290"
                         Margin="15 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Описание"
                           FontSize="25"
                           Margin="0 10 0 0"/>
                <TextBox x:Name="DescriptionTb"
                         FontSize="20"
                         Width="500"
                         Height="100"
                         TextChanged="DescriptionTb_TextChanged"
                         HorizontalAlignment="Left"
                         Margin="0 10 0 0"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Фото"
                                   FontSize="20"
                                   Width="100"
                                   Margin="10"/>
                        <Button x:Name="changeBtn"
                                Content="+ фото"
                                FontSize="20"
                                Height="35"
                                Width="110" 
                                Click="changeBtn_Click"/>
                    </StackPanel>
                    <Image x:Name="TestImg"
                           Width="200" 
                           Height="200"
                           Margin="20 10 0 0"/>
                </StackPanel>
                <Button x:Name="AddBt"
                        FontSize="20"
                        Width="200"
                        Height="40"
                        Content="Добавить"
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0"
                        Click="AddBt_Click"/>
            </StackPanel>
        </StackPanel>
        <Button Content="Выбрать фото" 
                Click="SelectPhotos_Click" 
                Width="200"
                FontSize="20"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="100 30 0 0"/>
        <Button Content="Сохранить" 
                Click="UploadPhotos_Click" 
                Width="200"
                FontSize="20"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="540 30 0 0"/>
        <ListView x:Name="PhotosLv" 
                  Width="710"
                  Height="600"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="0 100 80 0"
                  d:ItemsSource="{d:SampleData ItemCount=25}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Image Source="{Binding Photo}" 
                                           Width="200" 
                                           Height="200" />
                                    <Button Content="Удалить" 
                                        Click="DeletePhoto_Click" 
                                        Margin="0 5 0 0"
                                        Padding="5"
                                        Tag="{Binding Id}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <ProgressBar x:Name="UploadProgress" 
                     Minimum="0" 
                     Maximum="100" 
                     Height="20"
                     Width="710"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="0 0 80 30"/>
        <Button x:Name="ExitBt"
                FontSize="20"
                Width="170"
                Height="40"
                Content="Назад"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20" Click="ExitBt_Click"/>
    </Grid>
</Page>
