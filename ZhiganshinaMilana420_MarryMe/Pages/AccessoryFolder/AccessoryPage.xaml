<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.AccessoryFolder.AccessoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages.AccessoryFolder"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="AccessoryPage">

    <Grid Background="#EEEFEA">
        <TextBox x:Name="SearchTb"
                 Width="250"
                 Height="40"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="50 20 0 0" 
                 TextChanged="SearchTb_TextChanged"/>
        <ComboBox x:Name="FilterCb"
                    DisplayMemberPath="Name"
                    FontSize="20"
                    ItemsSource="{Binding typees}"
                    Width="250"
                    Height="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="320 20 0 0" 
                    SelectionChanged="FilterCb_SelectionChanged">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="HorizontalContentAlignment" 
                                Value="Center"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>
        <Button Content="+ украшения"
                Width="180"
                Height="40"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0 20 50 0"
                FontSize="20" 
                Click="Button_Click"/>
        <ListView x:Name="AccessoryLV"
                    d:ItemsSource="{d:SampleData ItemCount=25}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 80 0 0"
                    Width="1300"
                    Height="650">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border BorderBrush="#909478"
                                    BorderThickness="5"
                                    Width="400"
                                    Height="200"
                                    CornerRadius="20">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding DisplayPhotoImage}"
                                           Width="150"
                                           Height="150"
                                           HorizontalAlignment="Left"
                                           Margin="20 5"/>
                                <StackPanel Orientation="Vertical"
                                                Width="190"
                                                Margin="0 10 0 10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="№ 0"
                                                       FontSize="20"
                                                       Margin="0 30 0 0"/>
                                        <TextBlock Text="{Binding Id}"
                                                       FontSize="20"
                                                       Margin="0 30 0 0"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                                       Margin="0 5 0 0"
                                                       FontSize="20"
                                                       TextWrapping="Wrap" Cursor=""/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Price}"
                                                   FontSize="20"
                                                   Margin="0 5 0 0"/>
                                        <TextBlock Text="руб."
                                                   FontSize="20"
                                                   Margin="10 5 0 0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                        <Button Content="✏️"
                                                    Width="50"
                                                    Height="30"
                                                    FontSize="15"
                                                    Margin="0 10 10 0"
                                                    Click="ExitBtn_Click"/>
                                        <Button Content="🗑"
                                                    Width="50"
                                                    Height="30"
                                                    FontSize="15"
                                                    Margin="0 10 10 0"
                                                    Click="DeleteBtn_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
