<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.СoupleСardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="СoupleСardPage">
    
    <Grid Background="#EEEFEA">
        <TextBlock Text="Карточка пары"
                   FontWeight="Bold"
                   Foreground="#909478"
                   FontSize="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="55 30 0 0"/>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="55 100 0 0">
            <TextBlock Text="Жених"
                       FontSize="25"
                       FontWeight="Bold"/>
            <TextBlock x:Name="NameGroomTb"
                       HorizontalAlignment="Left"
                       Margin="0 5 0 0"
                       Foreground="Black"
                       Width="250"
                       Height="auto"
                       FontSize="20"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Невеста"
                       FontSize="25"
                       Margin="0 10 0 0"
                       FontWeight="Bold"/>
            <TextBlock x:Name="NameBrideTb"
                       Foreground="Black"
                       Width="250"
                       FontSize="20"
                       Height="auto"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"
                       Margin="0 5 0 0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    Margin="55 420 0 0"
                    Width="300"
                    HorizontalAlignment="Left">
            <TextBlock Text="Дата мероприятия"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock x:Name="WeddingDateTb"
                       Foreground="Black"
                       Width="250"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       Height="auto"
                       Margin="0 5 0 0"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Желаемый бюджет"
                       FontSize="20"
                       Margin="0 10 0 0"
                       FontWeight="Bold"/>
            <TextBlock x:Name="WeddingBudgetTb"
                       Foreground="Black"
                       Width="250"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       Height="auto"
                       Margin="0 5 0 0"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Количество гостей"
                       FontSize="20"
                       Margin="0 10 0 0"
                       FontWeight="Bold"/>
            <TextBlock x:Name="NumberGuestsTb"
                       Foreground="Black"
                       Width="250"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       Height="auto"
                       Margin="0 5 0 0"
                       TextWrapping="Wrap"/>
        </StackPanel>
        <TextBlock Text="Итого:"
                   FontWeight="Bold"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0 0 600 20"/>
        <TextBlock x:Name="FinalPriceTb"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0 0 300 15"
                   Width="230"
                   FontSize="20"
                   Height="30"/>
        <ListView x:Name="FavoritClientLv"
                  Width="780"
                  Height="650"
                  d:ItemsSource="{d:SampleData ItemCount=12}"
                  Margin="100 50 0 0"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  BorderThickness="5"
                  BorderBrush="LightGray">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="№" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Number}" 
                                   HorizontalAlignment="Center"
                                   Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Категория" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Название" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Цена" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Price}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date}" 
                                           Padding="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            Visibility="{Binding AdminButtonsVisibility}">
                                    <Button x:Name="SelectCategoryBtt"
                                            Padding="5"
                                            Content="Выбрать"
                                            Click="SelectCategory_Click"
                                            Tag="{Binding Number}"
                                            Margin="0 0 5 0"/>
                                    <Button x:Name="CancelSelectionBtt"
                                            Padding="5"
                                            Content="Отменить"
                                            Click="CancelSelection_Click"
                                            Tag="{Binding Number}"
                                            Visibility="{Binding CancelButtonVisibility}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ExitBt"
                FontSize="20"
                Width="150"
                Height="45"
                Content="Назад"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20" Click="ExitBt_Click"/>
        <Button x:Name="GenerateContractBt"
                FontSize="20"
                Width="200"
                Height="45"
                Content="Создать договор"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 30 30"
                Click="GenerateContractBt_Click"/>
        <Button x:Name="SeatingNavigateBt"
                FontSize="20"
                Width="200"
                Height="45"
                Content="Рассадка"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 30 100" 
                Click="SeatingNavigateBt_Click"/>
    </Grid>
</Page>
