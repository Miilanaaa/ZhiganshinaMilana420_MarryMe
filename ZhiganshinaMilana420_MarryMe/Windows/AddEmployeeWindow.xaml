<Window x:Class="ZhiganshinaMilana420_MarryMe.Windows.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="AddEmployeeWindow" 
        Height="500" 
        Width="900">
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Фамилия"
                               FontSize="20"/>
                    <TextBox x:Name="SurnameTb"
                             Width="200"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="0 5 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10 0 0 0">
                    <TextBlock Text="Имя"
                               FontSize="20"/>
                    <TextBox x:Name="NameTb"
                             Width="200"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="0 5 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10 0 0 0">
                    <TextBlock Text="Отчество"
                               FontSize="20"/>
                    <TextBox x:Name="PatronymicTb"
                             Width="200"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="0 5 0 0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 25 0 0">
                <TextBlock Text="Роль"
                           FontSize="20"
                           Margin="0 5 0 0"/>
                <ComboBox x:Name="RoleCb"
                          Width="145"
                          Height="30"
                          Margin="10 5 0 0"
                          ItemsSource="{Binding roles}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="Email"
                           FontSize="20"
                           Margin="10 5 0 0"/>
                <TextBox x:Name="EmailTb"
                         Width="145"
                         Height="35"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="10 5 0 0"/>
                <TextBlock Text="Пол"
                           FontSize="20"
                           Margin="10 5 0 0"/>
                <TextBlock Text="м"
                               FontSize="20"
                               Margin="18 5 0 0"/>
                <CheckBox x:Name="GenderMen"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              Margin="10 0 0 0"/>
                <TextBlock Text="ж"
                               FontSize="20"
                               Margin="19 5 0 0"/>
                <CheckBox x:Name="GenderGirl"
                              Style="{StaticResource MaterialDesignActionToggleButton}"
                              Margin="10 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 25 0 0">
                <TextBlock Text="Оклад"
                           FontSize="20"
                           Margin="0 5 0 0"/>
                <TextBox x:Name="SalaryTb"
                         Width="190"
                         Height="35"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="10 5 0 0"/>
                <TextBlock Text="День рождения"
                           FontSize="20"
                           Margin="10 5 0 0"/>
                <DatePicker x:Name="BirthDateDp"
                            Margin="10 5 0 0"
                            Width="200"
                            Height="35"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0 35 0 0">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Логин"
                               FontSize="20"/>
                    <TextBox x:Name="LoginTb"
                             Width="200"
                             Height="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="0 5 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10 0 0 0">
                    <TextBlock Text="Пароль"
                               FontSize="20"/>
                    <StackPanel Orientation="Horizontal">
                        <PasswordBox x:Name="PasswordTb"
                                 Width="200"
                                 Height="35"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="0 5 0 0"/>
                        <Button x:Name="TogglePasswordButton" 
                                Width="52" 
                                Margin="0 5 0 0"
                                Content="👁"
                                Foreground="Black"
                                FontSize="16"
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="TogglePasswordButton_Click"/>
                    </StackPanel>
                </StackPanel>
                <Button x:Name="AddEmployyeBt"
                        Width="165"
                        Height="40"
                        FontSize="17"
                        Margin="0 25 0 0"
                        Content="Создать приказ" 
                        Click="AddEmployyeBt_Click"/>
            </StackPanel>
        </StackPanel>
        <Button x:Name="ClouseBtt"
                Width="25" 
                Height="25"
                Content="✕"
                FontSize="10"
                Background="#909478"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                Click="ClouseBtt_Click"
                BorderBrush="Transparent">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}" 
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="{TemplateBinding BorderThickness}"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
