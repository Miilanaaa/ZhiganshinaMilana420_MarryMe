<Page x:Class="ZhiganshinaMilana420_MarryMe.Pages.ClientMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1445"
      Title="ClientMenuPage">

    <Grid Background="#EEEFEA">
        <TextBox x:Name="SearchTb"
                 Width="200"
                 Height="40"
                 FontSize="15"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="20 10 0 0"
                 />
        <ComboBox x:Name="FilterCb"
                  DisplayMemberPath="Name"
                  FontSize="15"
                  ItemsSource="{Binding statuses}"
                  Width="220"
                  Height="40"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="230 10 0 0">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="HorizontalContentAlignment" 
                            Value="Center"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>
        <DatePicker x:Name="DateTaskDp"
                    Width="200"
                    Height="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="460 10 0 0"
                    FontSize="20"
                    />
        <ListView x:Name="CoupleLV"
                  Width="1400"
                   d:ItemsSource="{d:SampleData ItemCount=1}"
                  Height="600"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Margin="0 90 0 0" 
                  SelectionChanged="CoupleLV_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1" VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border Width="1360"
                                Height="130"
                                BorderBrush="#909478"
                                BorderThickness="5"
                                CornerRadius="20">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal"
                                            Width="300"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left">
                                    <Image Source="{Binding BrideImage}"
                                           Width="90"
                                           Margin="20 20 0 0"/>
                                    <Image Source="{Binding HeartImage}"
                                           Width="50"
                                           Margin="20 20 0 0"/>
                                    <Image Source="{Binding GroomImage}"
                                           Width="90"
                                           Margin="10 20 0 0"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical"
                                            Width="500">
                                    <StackPanel Orientation="Horizontal"
                                                Height="60"
                                                Width="auto"
                                                VerticalAlignment="Top">
                                        <TextBlock Text="Жених:"
                                                   FontWeight="SemiBold"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="10 20 0 0"
                                                   Foreground="#909478"/>
                                        <TextBlock Text="{Binding Gromm.Surname}"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="5 20 0 0"/>
                                        <TextBlock Text="{Binding Gromm.Name}"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="5 20 0 0"/>
                                        <TextBlock Text="{Binding Gromm.Patronymic}"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="5 20 0 0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Height="30"
                                                VerticalAlignment="Top">
                                        <TextBlock Text="Невеста:"
                                                   FontWeight="SemiBold"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="10 0 0 0"
                                                   Foreground="#909478"/>
                                        <TextBlock Text="{Binding Bride.Surname}"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="5 0 0 0"/>
                                        <TextBlock Text="{Binding Bride.Name}"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="5 0 0 0"/>
                                        <TextBlock Text="{Binding Bride.Patronymic}"
                                                   FontSize="20"
                                                   Width="auto"
                                                   Height="30"
                                                   VerticalAlignment="Top"
                                                   Margin="5 0 0 0"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Vertical"
                                            Width="300">
                                    <Button x:Name="FinishWeddingBtt" 
                                            Content="Завершить" 
                                            Width="150" 
                                            Margin="0 15 0 0"
                                            Click="FinishWeddingBtt_Click"
                                            IsEnabled="{Binding IsActive}"/>
                                    <Button x:Name="CancelWeddingBtt" 
                                            Content="Отменить" 
                                            Width="150" 
                                            Margin="0 20 0 0"
                                            Click="CancelWeddingBtt_Click"
                                            IsEnabled="{Binding IsActive}"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding WeddingStatus.Name}"
                                               FontSize="25"
                                               Height="40"
                                               Width="auto"
                                               Margin="0 10 0 0"/>
                                    <TextBlock Text="{Binding WeddingDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                                               FontSize="25"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
