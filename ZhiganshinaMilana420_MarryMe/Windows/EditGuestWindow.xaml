<Window x:Class="ZhiganshinaMilana420_MarryMe.Windows.EditGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhiganshinaMilana420_MarryMe.Windows"
        mc:Ignorable="d"
        Title="EditGuestWindow" Height="330" Width="400">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Имя гостя:"
                       FontSize="15"/>
            <TextBox x:Name="NameTextBox"
                     FontSize="20"
                     Margin="0 10 0 0"/>
            <TextBlock Text="Ширина:" 
                       FontSize="15"
                       Margin="0 10 0 0"/>
            <TextBox x:Name="WidthTextBox" 
                     FontSize="20"
                     Margin="0 10 0 0"/>

            <TextBlock Text="Высота:" 
                       FontSize="15"
                       Margin="0 10 0 0"/>
            <TextBox x:Name="HeightTextBox"
                     FontSize="20"
                     Margin="0 10 0 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click"/>
            <Button Content="Отмена" 
                    Width="90"
                    Margin="10 0 0 0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
